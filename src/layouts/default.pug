include ../abstracts/variables

doctype html
html(lang=lang, dir=dir)
    // HEAD
    head
        block head
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible", content="ie=edge")
            meta(name="viewport" content="width=device-width, initial-scale=1")
            
            title=pageTitle
            meta(name="description" content=pageDescription)

            // link(rel="apple-touch-icon" sizes="180x180" href=dirImages + "favicon/apple-touch-icon.png")

            // link(rel="shortcut icon" href=dirImages + "favicon/favicon.png")
            
            meta(name="theme-color" content="#D72027")

            // dns-prefetch
            link(rel="preconnect", href="https://connect.facebook.net")
            link(rel="dns-prefetch", href="https://connect.facebook.net")

            link(rel="preconnect" href="https://fonts.googleapis.com")
            link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
            link(href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet")

            link(href=dirAssets + '/style.css' rel='stylesheet')

            // swiper.js
            link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css")
            script(src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js")

            // lightbox

            link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css")
            script(src="https://cdn.jsdelivr.net/gh/mcstudios/glightbox/dist/js/glightbox.min.js")

            // custom js
            script(src='./app.js')

    // BODY
    body(class=pageClass)
        block header
            // HEADER
            include ../includes/header
            
        // CONTENT
        main.d-flex.flex-column
            block content
                h1(style="margin: 100px 0; text-align: center;") page content here
        
        block footer
            if footerEnable === 'true'
                include ../includes/footer
